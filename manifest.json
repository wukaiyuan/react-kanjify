{
  "manifest_version": 2,

  "name": "React Kanjify",
  "description": "This extension takes Simplified Chinese input and converts to Japanese kanji",
  "version": "1.0",

  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
